{
  "name": "weather-ai-agent",
  "version": "1.0.0",
  "description": "AI agent for weather-based activity planning",
  "main": "dist/index.js",
  "scripts": {
    "build": "cd web && npm install && npm run build",
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts",
    "test-api": "ts-node src/test-api.ts",
    "web": "cd web && npm start",
    "dev:all": "concurrently \"npm run dev\" \"npm run web\""
  },
  "dependencies": {
    "axios": "^1.6.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "node-cron": "^3.0.3",
    "openai": "^4.20.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.9.0",
    "@types/node-cron": "^3.0.11",
    "concurrently": "^8.2.2",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  }
}